{
  "name": "clispot",
  "displayName": "clispot",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clispot-sidebar",
          "title": "Clispot",
          "icon": "resources/clispot-logo.svg"
        }
      ]
    },
    "views": {
      "clispot-sidebar": [
        {
          "id": "clispotLibrary",
          "name": "My Library",
          "type": "webview",
          "icon": "resources/clispot-logo.svg",
          "view": "clispotLibrary"
        }
      ]
    },
    "commands": [
      {
        "command": "clispot.refreshLibrary",
        "title": "Refresh Library",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "clispot.togglePlayPause",
        "title": "Toggle Play/Pause"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "clispot.search",
          "when": "view == clispotLibrary",
          "group": "navigation"
        },
        {
          "command": "clispot.refreshLibrary",
          "when": "view == clispotLibrary",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.cjs && pnpm run build:webview",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.cjs --watch",
    "watch:webview": "vite build --watch --config ./webview-ui/vite.config.ts",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.cjs --production && pnpm run build:webview",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "echo eslint",
    "test": "vscode-test",
    "build:webview": "vite build --config ./webview-ui/vite.config.ts",
    "dev:webview": "vite --config ./webview-ui/vite.config.ts"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@types/vscode-webview": "^1.57.5",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.6"
  },
  "dependencies": {
    "@types/eventsource": "^1.1.15",
    "eventsource": "^4.1.0"
  }
}
