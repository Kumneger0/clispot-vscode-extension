{
  "name": "clispot",
  "displayName": "clispot",
  "description": "Clispot is a VS Code extension that allows you to control Clispot Core from within the editor.",
  "version": "0.3.3",
  "engines": {
    "vscode": "^1.102.0"
  },
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kumneger0/clispot-vscode-extension.git"
  },
  "publisher": "kumnegerwondimu",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clispot-sidebar",
          "title": "Clispot",
          "icon": "resources/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "clispot-sidebar": [
        {
          "id": "clispotLibrary",
          "name": "My Library",
          "type": "webview",
          "icon": "resources/sidebar-icon.svg",
          "view": "clispotLibrary"
        }
      ]
    },
    "commands": [
      {
        "command": "clispot.refreshLibrary",
        "title": "Refresh Library"
      },
      {
        "command": "clispot.togglePlayPause",
        "title": "Toggle Play/Pause"
      },
      {
        "command": "clispot.playNextTrack",
        "title": "Play Next Track"
      },
      {
        "command": "clispot.playPreviousTrack",
        "title": "Play Previous Track"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.cjs && npm run build:webview",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.cjs --watch",
    "watch:webview": "vite build --watch --config ./webview-ui/vite.config.ts",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.cjs --production && npm run build:webview",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "echo eslint",
    "format:check": "prettier --check .",
    "test": "vscode-test",
    "build:webview": "vite build --config ./webview-ui/vite.config.ts",
    "dev:webview": "vite --config ./webview-ui/vite.config.ts"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@types/vscode-webview": "^1.57.5",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.6"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/eventsource": "^1.1.15",
    "eventsource": "^4.1.0"
  }
}
